{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "build/"
  },
  "exclude": [
    "logs",
    "node_modules",
    "build",
    "coverage"
  ]
}